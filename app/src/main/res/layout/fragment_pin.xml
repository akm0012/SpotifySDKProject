<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    android:id="@+id/fragment_pin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/colorPrimary"
    app:alignmentMode="alignBounds"
    app:columnCount="3"
    app:rowCount="4"
    app:rowOrderPreserved="false"
    app:useDefaultMargins="false"
    tools:context="com.mobiquity.amarshall.spotifysync.UI.Fragments.PinFragment">

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="1"
        app:layout_column="0"
        app:layout_row="0"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="2"
        app:layout_column="1"
        app:layout_row="0"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="3"
        app:layout_column="2"
        app:layout_row="0"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="4"
        app:layout_column="0"
        app:layout_row="1"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="5"
        app:layout_column="1"
        app:layout_row="1"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="6"
        app:layout_column="2"
        app:layout_row="1"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="7"
        app:layout_column="0"
        app:layout_row="2"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="8"
        app:layout_column="1"
        app:layout_row="2"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="9"
        app:layout_column="2"
        app:layout_row="2"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="Clear"
        app:layout_column="0"
        app:layout_row="3"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="0"
        app:layout_column="1"
        app:layout_row="3"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/PinButton"
        android:text="back"
        app:layout_column="2"
        app:layout_row="3"/>


</android.support.v7.widget.GridLayout>
