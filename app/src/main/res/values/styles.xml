<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PinTextView" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="PinDotStyle">
        <item name="android:src">@drawable/pin_indicator</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="PinDotNumberStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">@dimen/pin_number_size_zoomed</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>

    <style name="PinPadButtonsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/pin_number_size_normal</item>
    </style>

</resources>